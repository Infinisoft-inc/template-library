{
  "name": "{{name}}",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "author": "Infinisoft Inc. <info@infini-soft.com>",
  "homepage": "https://www.kitchen.infini-soft.com/",
  "license": "INFINISOFT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types.d.ts",
  "scripts": {
    "build:dev": "yarn run build:types& webpack -c webpack.config.js",
    "test": "jest",
    "test:coverage": "jest --coverage&& start analyze/coverage/lcov-report/index.html",
    "build:analyze": "webpack -c webpack.analyze.js",
    "build:analyze:baseline": "webpack -c webpack.analyze.js --env ANALYZEBASELINE=true",
    "build:types": "tsc -p tsconfig.json -d --emitDeclarationOnly --outFile dist/types.d.ts --esModuleInterop",
    "build:prod": "yarn run build:types& webpack -c webpack.config.prod.js",
    "deploy":"kli component deploy",
    "start:dev": "webpack serve -c webpack.config.js --open",
    "serve:dist": "serve -s dist",
    "clean":"rm -rf analyze dist node_modules"
  },
  "devDependencies": {},
  "peerDependencies": {},
  "infinisoft": {
    "port":{{port}},
    "moduleFederation": {
      "lib":"{{lib}}",
      "remotes": {},
      "exposes": {
        "{{lib}}": "./src/{{name}}/{{lib}}"
      }
    }
  }
}
